import os
os.system('clear')

import matplotlib.pyplot as plt #aprovecho para instalar matplotlib desde la terminal :) el gr치fico ressulta medio pobre pero sirvi칩 el ejercicio
import networkx as nx

# Creamos el grafo
G = nx.DiGraph()

# Relaciones de herencia e instanciaci칩n
G.add_edge("object", "Perro")
G.add_edge("Perro", "champi")

# Posiciones y estilo 
pos = nx.spring_layout(G, seed=42)
nx.draw(
    G, pos,
    with_labels=True,
    node_size=3000,
    node_color="#90caf9",
    font_size=10,
    font_weight="bold",
    arrows=True
)

plt.title("Herencia e instanciaci칩n en Python")
plt.show()


